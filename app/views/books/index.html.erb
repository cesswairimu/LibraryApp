<h1> Books In the Library</h1>
<%= form_tag books_path, :method => 'get' do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search", :name => nil %>
<% end %>
<% if current_user.admin %>
    <ul class="top-bar">
    <li> <%= link_to "Add Book", new_book_path %> |
    <li> <%= link_to "Manage Books", bids_path %>
    <ul>
 <% end %>

<table>
    <thead>
        <tr>
            <th> id</th>
            <th> Title </th>
            <th> Category </th>
            <th> Author</th>
            <th> Quantity</th>
            <th> Publisher</th>
        </tr>
    </thead>
    <tbody>
        <%= render @books %>
    </tbody>
</table>

