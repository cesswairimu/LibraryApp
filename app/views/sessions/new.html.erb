<%= form_for(:session, url: login_path) do |f| %>
    <div class="row">
        <h1> Login here </h1>
        <div class="small-5">
    <%= f.label :username %>
    <%= f.text_field :username %> <br> <br>
    </div>

        <div class="small-5">
    <%= f.label :password %>
    <%= f.password_field :password %><br> <br>
    <%= link_to "(Forgot password bunch?!)", new_password_reset_path %><br>

    <%= f.label :remember_me do %>
        <%= f.check_box "remember_me"%> 
        <span>Remember me here</span><br>
    </div>
    <% end %>
    <div class="small-5">
    <%= f.submit "Log in", class: "button" %>
<% end %>       New here ?? <%= link_to "SignUp", signup_path, class: "button" %>
    </div>
