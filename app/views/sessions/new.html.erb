<hr>
<%= form_for(:session, url: login_path) do |f| %>
    <div class="row">
        <h1> Login here </h1>
        <div class="small-8">
            <div class="small-offset-4">
                <%= f.label :username %>
                <%= f.text_field :username %>

                <%= f.label :password %>
                <%= f.password_field :password %>
                <ul><%= link_to "(Forgot password)", new_password_reset_path %> </ul>

                <%= f.label :remember_me do %>
                    <%= f.check_box "remember_me"%>
                    <span>Remember me here</span>
                <% end %>
                <%= f.submit "Log in", class: "button large" %>
            <% end %>
                &nbsp; New here ?? &nbsp; <%= link_to "SignUp", signup_path, class: "button secondary large" %>
            </div>
        </div>
    </div>


