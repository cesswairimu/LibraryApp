<%= @user.username %> <br>

<%= @user.email %> <br>
<h1> Books Borrowed </h1>
<table>
    <tr> 
        <th> Book Title </th>
        <th> Author </th>
        <th> Due date </th>
        <th>Charges</th>
        </tr>
      
<% @borrowed.each do  |bid|%>
    <% if current_user.id == bid.user.id %>

        <tr>
    <td><%= bid.book.title %> </td>
    <td><%= bid.book.author%> </td>
    <td><%= bid.due_date %> </td>
    <td><%= bid.charges %> </td>

                </tr>
                <% end %>

                <% end %>

                </table>
