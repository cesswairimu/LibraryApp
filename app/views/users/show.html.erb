<%= @user.username %> <br>
<%= @user.email %> <br>
<% if @borrowed.any? %>
<h1> Books Borrowed </h1>
<table>
    <tr> 
        <th> Book Title </th>
        <th> Author </th>
        <th> Due date </th>
        <th>Charges</th>
        </tr>
<% @borrowed.each do  |bid|%>
    <% if current_user.id == bid.user.id %>
        <tr>
    <td><%= bid.book.title %> </td>
    <td><%= bid.book.author%> </td>
    <td><%= days_remaining(bid) %> </td>
    <% if Date.today < bid.due_date  %>
        <% bid.charges = 0 %>
    <% else %>
        <% bid.charges = (Date.today - bid.due_date)* 100 %>
    <td><%= bid.charges %> </td>
<% end %>
    <td> <%= link_to "Lost", lost_path(bid_id: bid.id),  status: "lost" , class: "button" %>
                </tr>
            <% end %>

        <% end %>
                </table>
            <% end %>
                <% if @losts.any? %>
                <h1> LOSTS </h1>
    <table>
        <tr>
        <th>ID</th>
            <th>Book title</th>
            <th> Author </th>
            <th> Charge </th>
        </tr>
        <%  @losts.each do |bid|  %>
    <% if current_user.id == bid.user.id %>
            <tr>
                <td><%= bid.id %> </td>
                <td><%= bid.book.title %> </td>
                <td><%= bid.book.author %></td>
                        <td> <%= %>
             </td>
            </tr>
        <% end %>
    <% end %>
    </table>
<% end %>
