
<h1>Sign Up</h1>
<p>Find me in app/views/users/new.html.erb</p>
<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

  <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
    <% end %>
